const mongoose = require('mongoose');

const noteSchema = new mongoose.Schema({
  title: {
    type: String,
    required: true,
    trim: true
  },
  content: {
    type: String,
    required: true,
    trim: true
  },
  category: {
    type: String,
    default: "general",
    trim: true
  },
  user: {
    type: mongoose.Schema.Types.ObjectId,
    ref: "User",
    required: true
  },
  isArchived: {
    type: Boolean,
    default: false
  },
}, {timestamps: true});

const NoteModel = mongoose.model("Note",noteSchema);
module.exports = NoteModel;
