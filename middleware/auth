const jwt = require("jsonwebtoken");

function requireAuth(req, res, next){
    const token = req.cookies.token;
    if(!token)
        return res.redirect('/login');
    try{
        const decoded = jwt.verify(token, "SECRET_KEY");
        req.user = decoded;
        next();
    } catch(error){
        return res.redirect('/login');
    }
}

module.exports = requireAuth;
